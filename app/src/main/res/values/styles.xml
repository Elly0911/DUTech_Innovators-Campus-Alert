<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#0066CC</item>
        <item name="colorPrimaryDark">#004C99</item>
        <item name="colorAccent">#0066CC</item>
    </style>

    <style name="Theme.PBDVProject.Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#0066CC</item>
        <item name="colorPrimaryDark">#004C99</item>
        <item name="colorAccent">#0066CC</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="SpinnerTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">#0066CC</item>
        <item name="colorControlActivated">#0066CC</item>
        <item name="colorControlHighlight">#0066CC</item>
        <item name="android:textColor">#003366</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupTheme">@style/SpinnerPopupTheme</item>
    </style>

    <style name="SpinnerPopupTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@drawable/spinner_dropdown_background</item>
        <item name="android:textColor">#003366</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearanceBottomSheet</item>
    </style>

    <style name="ShapeAppearanceBottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
</resources>